<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frazeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    tools:context=".FrazeActivity">


    <TextView
        android:id="@+id/nazivFraze"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/english"
        android:padding="5dp"
        android:textSize="35sp" />


    <TextView
        android:id="@+id/nazivFrazeHr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/croatian"
        android:padding="5dp"
        android:textSize="35sp" />

    <Button
        android:id="@+id/speakButton"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:textSize="20sp"
        android:layout_height="90dp"
        android:layout_marginTop="30dp"
        android:text="@string/speak"
        android:drawableStart="@android:drawable/ic_btn_speak_now"
        android:drawableEnd="@android:drawable/ic_btn_speak_now"
        />
</LinearLayout>
